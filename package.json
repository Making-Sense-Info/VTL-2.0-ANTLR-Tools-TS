{
	"name": "@making-sense/vtl-2-0-antlr-tools-ts",
	"version": "1.0.0",
	"description": "VTL 2.0 Typescript tools generated by ANTLR",
	"repository": {
		"type": "git",
		"url": "git://github.com/Making-Sense-Info/VTL-2.0-ANTLR-Tools-TS.git"
	},
	"main": "dist/lib/index.js",
	"types": "dist/lib/index.d.ts",
	"scripts": {
		"build-grammar": "antlr4ng -Dlanguage=TypeScript -o src/lib/generated/ -visitor -listener -Xexact-output-dir src/lib/*.g4",
		"g4ToTs": "ts-node --skipProject src/bin/g4toTs",
		"build": "yarn build-grammar && yarn g4ToTs && tsc"
	},
	"author": "u/NicoLaval",
	"license": "MIT",
	"files": [
		"src/",
		"!src/test/",
		"dist/",
		"!dist/test/",
		"!dist/tsconfig.tsbuildinfo"
	],
	"keywords": [
		"VTL",
		"ANTLR"
	],
	"homepage": "https://github.com/Making-Sense-Info/VTL-2.0-ANTLR-Tools-TS",
	"devDependencies": {
		"@types/node": "^20.12.5",
		"antlr4ng-cli": "^2.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.4"
	},
	"dependencies": {
		"antlr4ng": "^3.0.4"
	},
	"publishConfig": {
		"access": "public"
	}
}
